#include<stdio.h>
int main(){
    char str[40];
    int size=0;
    printf("Enter the string:\n");
    scanf("%s[^\n]",str); 
    while (str[size]!='\0'){ 
        size++;
    }
    for (int i=0,j=size-1;i<j;i++,j--){
        char temp=str[i];
        str[i]=str[j];
        str[j]=temp;
    }
    printf("The reverse string is:\n");
    puts(str);
    return 0;
}

